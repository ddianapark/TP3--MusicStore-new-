@{
    ViewData["Title"] = "Index";
}

<header>    
    <img src="images/logo.jpg" alt="LOGO">
    <h1>MusicStore</h1>
    <p>Bienvenidos al mejor sitio de música</p>
</header>
   
   <div>
        @foreach(Disco Disco in ViewBag.catalogo.Values)
        {
            <div>
                <h3>@Disco.Titulo</h3>
                <img src = "@Disco.FotoUrl">
                <p>Artista: @Disco.Artista</p>
                <p>Productor: @Disco.Productor</p>
                <p>Género: @Disco.Genero</p>
                <p><a href = '@Url.Action("SelectDisco", "Home", new {Id = Disco.Id})' alt = "Ir a los datos personales">Ver Disco</a></p>
            
            </div>
        }
    </div>